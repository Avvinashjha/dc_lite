---
import '../styles/global.scss';
import '../styles/components.scss';
import Logo from '../components/Logo.astro';
import Icons from '../components/Icons.astro';
import { getSiteConfig } from '../utils/contentLoader';

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  author?: string;
  tags?: string[];
}

const config = getSiteConfig();
const {
  title,
  description,
  image,
  type = 'website',
  publishedTime,
  author = config.site.author,
  tags = []
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = image ? new URL(image, Astro.site).href : new URL('/og-image.png', Astro.site).href;
const seo = (config as any).seo || {};
const analytics = (config as any).analytics || {};
const twitterHandle = seo.twitterHandle || '@dailycoder_in';
const locale = seo.locale || 'en_US';

const jsonLd: Record<string, any> = {
  '@context': 'https://schema.org',
  '@type': type === 'article' ? 'Article' : 'WebSite',
  headline: title,
  description,
  image: ogImage,
  url: canonicalURL.href,
  ...(publishedTime && { datePublished: publishedTime.toISOString() }),
  ...(author && { author: { '@type': 'Person', name: author } }),
  ...(tags.length > 0 && { keywords: tags.join(', ') }),
};

// Add publisher for articles
if (type === 'article') {
  jsonLd.publisher = {
    '@type': 'Organization',
    name: config.site.title,
    logo: { '@type': 'ImageObject', url: new URL('/favicon.svg', Astro.site).href }
  };
}

// Add SearchAction for WebSite schema
if (type === 'website') {
  jsonLd.potentialAction = {
    '@type': 'SearchAction',
    target: `${config.site.url}/blog?q={search_term}`,
    'query-input': 'required name=search_term'
  };
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" sizes="48x48" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#2563eb" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {tags.length > 0 && <meta name="keywords" content={tags.join(', ')} />}
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content={image ? "1200" : "512"} />
    <meta property="og:image:height" content={image ? "630" : "512"} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content={config.site.title} />
    <meta property="og:locale" content={locale} />
    {publishedTime && <meta property="article:published_time" content={publishedTime.toISOString()} />}

    <!-- Twitter -->
    <meta name="twitter:card" content={image ? "summary_large_image" : "summary"} />
    <meta name="twitter:site" content={twitterHandle} />
    <meta name="twitter:creator" content={twitterHandle} />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Analytics -->
    {analytics.googleSearchConsoleVerification && (
      <meta name="google-site-verification" content={analytics.googleSearchConsoleVerification} />
    )}
    {analytics.googleAnalyticsId && (
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${analytics.googleAnalyticsId}`}></script>
    )}
    {analytics.googleAnalyticsId && (
      <script is:inline define:vars={{gaId: analytics.googleAnalyticsId}}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', gaId);
      </script>
    )}

    <slot name="head" />
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
      const rm = localStorage.getItem('readingMode') === 'true';
      if (rm) document.documentElement.setAttribute('data-reading-mode', 'true');
    </script>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="header__inner">
          <a href="/" class="header__logo">
            <Logo size={28} color="var(--color-primary)" />
            <span>{config.site.title}</span>
          </a>
          
          <!-- Desktop nav -->
          <nav class="header__nav header__nav--desktop">
            {config.navigation.map(item => (
              <a href={item.path}>{item.label}</a>
            ))}
            <button id="reading-mode-toggle" class="theme-toggle" aria-label="Reading mode" title="Reading Mode">
              <Icons name="book" size={18} />
            </button>
            <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
              <span id="theme-icon" class="theme-toggle__icon">
                <Icons name="moon" size={18} />
              </span>
            </button>
          </nav>

          <!-- Mobile controls -->
          <div class="header__mobile-controls">
            <button id="reading-mode-toggle-mobile" class="theme-toggle" aria-label="Reading mode" title="Reading Mode">
              <Icons name="book" size={18} />
            </button>
            <button id="theme-toggle-mobile" class="theme-toggle" aria-label="Toggle theme">
              <span id="theme-icon-mobile" class="theme-toggle__icon">
                <Icons name="moon" size={18} />
              </span>
            </button>
            <button id="mobile-menu-btn" class="theme-toggle" aria-label="Open menu">
              <Icons name="menu" size={20} />
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile nav overlay -->
      <nav id="mobile-nav" class="header__mobile-nav">
        <div class="header__mobile-nav-inner">
          {config.navigation.map(item => (
            <a href={item.path} class="header__mobile-link">{item.label}</a>
          ))}
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__grid">
          <div class="footer__brand">
            <a href="/" class="footer__logo">
              <Logo size={24} color="var(--color-primary)" />
              <span>{config.site.title}</span>
            </a>
            <p class="footer__tagline">{config.site.description}</p>
            <div class="footer__social">
              {config.socialLinks.github && (
                <a href={config.socialLinks.github} target="_blank" rel="noopener" aria-label="GitHub" title="GitHub">
                  <Icons name="github" size={18} />
                </a>
              )}
              {config.socialLinks.twitter && (
                <a href={config.socialLinks.twitter} target="_blank" rel="noopener" aria-label="Twitter" title="Twitter">
                  <Icons name="twitter" size={18} />
                </a>
              )}
              {config.socialLinks.linkedin && (
                <a href={config.socialLinks.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn">
                  <Icons name="linkedin" size={18} />
                </a>
              )}
              {config.socialLinks.youtube && (
                <a href={config.socialLinks.youtube} target="_blank" rel="noopener" aria-label="YouTube" title="YouTube">
                  <Icons name="youtube" size={18} />
                </a>
              )}
              {config.socialLinks.instagram && (
                <a href={config.socialLinks.instagram} target="_blank" rel="noopener" aria-label="Instagram" title="Instagram">
                  <Icons name="instagram" size={18} />
                </a>
              )}
              <a href="/rss.xml" target="_blank" rel="noopener" aria-label="RSS Feed" title="RSS Feed">
                <Icons name="rss" size={16} />
              </a>
            </div>
          </div>

          <div class="footer__links">
            <h4>Content</h4>
            <a href="/blog">Blog</a>
            <a href="/courses">Courses</a>
            <a href="/docs">Documentation</a>
            <a href="/rss.xml" target="_blank" rel="noopener">RSS Feed</a>
          </div>

          <div class="footer__links">
            <h4>Site</h4>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
            <a href="/privacy">Privacy Policy</a>
          </div>
        </div>

        <div class="footer__bottom">
          <p>&copy; {new Date().getFullYear()} {config.site.title}. Built with <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>.</p>
        </div>
      </div>
    </footer>

    <script is:inline>
      // Theme toggle (both desktop and mobile)
      function setupTheme() {
        var toggles = [document.getElementById('theme-toggle'), document.getElementById('theme-toggle-mobile')];
        var icons = [document.getElementById('theme-icon'), document.getElementById('theme-icon-mobile')];
        
        function updateIcons(t) {
          icons.forEach(function(icon) {
            if (icon) icon.innerHTML = t === 'dark' 
              ? '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>'
              : '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>';
          });
        }
        
        updateIcons(document.documentElement.getAttribute('data-theme') || 'light');
        
        toggles.forEach(function(btn) {
          if (btn) btn.addEventListener('click', function() {
            var cur = document.documentElement.getAttribute('data-theme') || 'light';
            var next = cur === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
            updateIcons(next);
          });
        });
      }

      // Mobile menu
      function setupMobileMenu() {
        var btn = document.getElementById('mobile-menu-btn');
        var nav = document.getElementById('mobile-nav');
        if (!btn || !nav) return;
        
        btn.addEventListener('click', function() {
          var open = nav.classList.toggle('header__mobile-nav--open');
          btn.innerHTML = open
            ? '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>'
            : '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/></svg>';
        });
        
        // Close menu on link click
        nav.querySelectorAll('a').forEach(function(a) {
          a.addEventListener('click', function() {
            nav.classList.remove('header__mobile-nav--open');
            btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/></svg>';
          });
        });
      }
      
      // Reading mode toggle
      function setupReadingMode() {
        var btns = [document.getElementById('reading-mode-toggle'), document.getElementById('reading-mode-toggle-mobile')];
        
        function updateStyle() {
          var on = document.documentElement.getAttribute('data-reading-mode') === 'true';
          btns.forEach(function(btn) {
            if (btn) btn.style.color = on ? 'var(--color-primary)' : '';
          });
        }
        updateStyle();

        btns.forEach(function(btn) {
          if (btn) btn.addEventListener('click', function() {
            var on = document.documentElement.getAttribute('data-reading-mode') === 'true';
            if (on) document.documentElement.removeAttribute('data-reading-mode');
            else document.documentElement.setAttribute('data-reading-mode', 'true');
            localStorage.setItem('readingMode', String(!on));
            updateStyle();
          });
        });
      }

      setupTheme();
      setupMobileMenu();
      setupReadingMode();
    </script>
  </body>
</html>
