---
// Search component using Pagefind
---

<div class="search">
  <div id="search"></div>
</div>

<script>
  // This will be initialized by Pagefind after build
  // Pagefind is added in the build step
  
  window.addEventListener('DOMContentLoaded', async () => {
    const searchDiv = document.getElementById('search');
    if (!searchDiv) return;
    
    try {
      // @ts-ignore - Pagefind is added during build
      if (typeof window.PagefindUI !== 'undefined') {
        // @ts-ignore
        new window.PagefindUI({
          element: '#search',
          showSubResults: true,
          showImages: false,
          excerptLength: 30,
        });
      } else {
        // Fallback if Pagefind is not available
        searchDiv.innerHTML = `
          <input 
            type="search" 
            placeholder="Search posts..." 
            class="search__input"
            disabled
          />
          <p style="font-size: 0.875rem; color: var(--color-text-light); margin-top: 0.5rem;">
            Search will be available after the site is built.
          </p>
        `;
      }
    } catch (error) {
      console.error('Search initialization error:', error);
    }
  });
</script>

<style>
  :global(#search) {
    margin: 2rem 0;
  }
  
  :global(.pagefind-ui__search-input) {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    color: var(--color-text);
    font-size: 1rem;
  }
  
  :global(.pagefind-ui__result) {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    background: var(--color-surface);
  }
  
  :global(.pagefind-ui__result-title) {
    color: var(--color-text);
    font-weight: 600;
  }
  
  :global(.pagefind-ui__result-excerpt) {
    color: var(--color-text-light);
    font-size: 0.875rem;
  }
</style>
