  .games-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 0.75rem; }
  .game-card { display: flex; flex-direction: column; align-items: center; text-align: center; padding: 1.25rem 0.75rem; border: 1px solid var(--color-border); border-radius: var(--radius-lg); background: var(--color-surface); text-decoration: none; color: inherit; transition: all 200ms; position: relative; }
  .game-card:hover { transform: translateY(-3px); box-shadow: var(--shadow-md); border-color: var(--color-primary); text-decoration: none; color: inherit; }
  .game-card * { text-decoration: none; }
  .game-card--disabled { opacity: 0.5; pointer-events: none; }
  .game-card--disabled:hover { transform: none; box-shadow: none; border-color: var(--color-border); }
  .game-card__icon { font-size: 2rem; margin-bottom: 0.5rem; }
  .game-card__name { font-size: 0.9rem; font-weight: 700; margin-bottom: 0.15rem; color: var(--color-text); }
  .game-card__desc { font-size: 0.75rem; color: var(--color-text-light); line-height: 1.3; }
  .game-card__badge {
    position: absolute; top: 0.5rem; right: 0.5rem;
    font-size: 0.6rem; font-weight: 700; text-transform: uppercase;
    background: var(--color-code-bg); color: var(--color-text-light);
    padding: 0.15rem 0.4rem; border-radius: var(--radius-sm);
  }
  @media (max-width: 1024px) { .games-grid { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 768px) { .games-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 480px) { .games-grid { grid-template-columns: repeat(2, 1fr); gap: 0.5rem; } .game-card { padding: 1rem 0.5rem; } }
</style>
