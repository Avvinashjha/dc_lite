<style>
  .games-section { margin-bottom: 2.5rem; }
  .games-section__title { display: flex; align-items: center; gap: 0.5rem; font-size: 1.25rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--color-border); }
