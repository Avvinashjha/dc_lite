---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import Subscribe from "../components/Subscribe.astro";
import {
  getBlogPostsSorted,
  getCourses,
  getDocProjects,
} from "../utils/contentLoader";

const recentPosts = getBlogPostsSorted().slice(0, 3);
const courses = getCourses();
const docProjects = getDocProjects();
---

<BaseLayout
  title="DailyCoder - Free Developer Tools, Tutorials, Courses & Games"
  description="Free online developer tools, coding tutorials, interactive courses, and browser games. JSON formatter, chess, regex tester and more. No signup required."
>
  <!-- Hero -->
  <div class="hero">
    <div class="container">
      <h1 class="hero__title">Learn. Build. Ship.</h1>
      <p class="hero__description">
        In-depth blog posts, hands-on courses, free developer tools, and
        comprehensive documentation for modern web development.
      </p>
      <div
        style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;"
      >
        <a href="/blog" class="button">Read the Blog</a>
        <a href="/tools" class="button button--secondary">Explore Dev Tools</a>
      </div>
    </div>
  </div>

  <!-- Recent Blog Posts -->
  <section class="container section">
    <div class="section__header">
      <h2>Recent Posts</h2>
      <a href="/blog">View all &rarr;</a>
    </div>
    <div class="grid grid--3">
      {
        recentPosts.map((post) => (
          <PostCard
            title={post.title}
            description={post.description}
            date={new Date(post.date)}
            slug={post.slug}
            tags={post.tags}
            category={post.category}
            image={post.image}
            content={post.content}
          />
        ))
      }
    </div>
  </section>

  <!-- Courses -->
  {
    courses.length > 0 && (
      <section class="container section">
        <div class="section__header">
          <h2>Courses</h2>
          <a href="/courses">View all &rarr;</a>
        </div>
        <div class="grid grid--2">
          {courses.map((course) => (
            <a
              href={`/courses/${course.slug}`}
              class={`post-card ${courses.length === 1 ? "post-card--wide" : ""}`}
            >
              <div class="post-card__meta">
                <span>{course.level}</span>
                <span>&bull;</span>
                <span>{course.duration}</span>
                <span>&bull;</span>
                <span>{course.totalLessons} lessons</span>
              </div>
              <h3 class="post-card__title">{course.title}</h3>
              <p class="post-card__description">{course.description}</p>
              <div class="post-card__tags">
                {course.tags.slice(0, 3).map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      </section>
    )
  }

  <!-- Docs -->
  {
    docProjects.length > 0 && (
      <section class="container section">
        <div class="section__header">
          <h2>Documentation</h2>
          <a href="/docs">View all &rarr;</a>
        </div>
        <div class="grid grid--2">
          {docProjects.map((project) => (
            <a
              href={`/docs/${project.slug}/${project.sidebar[0]?.slug || ""}`}
              class="post-card"
            >
              <h3 class="post-card__title">{project.title}</h3>
              <p class="post-card__description">{project.description}</p>
              <div class="post-card__meta">
                <span>v{project.version}</span>
                <span>&bull;</span>
                <span>{project.sidebar.length} pages</span>
              </div>
            </a>
          ))}
        </div>
      </section>
    )
  }

  <!-- Popular Tools -->
  <section class="container section">
    <div class="section__header">
      <h2>Developer Tools</h2>
      <a href="/tools">View all 14 tools &rarr;</a>
    </div>
    <p
      style="color: var(--color-text-light); margin-top: -1.5rem; margin-bottom: 1.5rem;"
    >
      Free, private, client-side tools. No data leaves your browser.
    </p>
    <div class="tools-showcase">
      <a href="/tools/code-formatter" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">&lt;/&gt;</span>
        <h3>Code Formatter</h3>
        <p>Format & preview code</p>
      </a>
      <a href="/tools/json-formatter" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">&#123; &#125;</span>
        <h3>JSON Formatter</h3>
        <p>Format, validate, minify</p>
      </a>
      <a href="/tools/diff-checker" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">Â±</span>
        <h3>Diff Checker</h3>
        <p>Side-by-side comparison</p>
      </a>
      <a href="/tools/regex-tester" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">.*</span>
        <h3>Regex Tester</h3>
        <p>Live match highlighting</p>
      </a>
      <a href="/tools/color-picker" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">ðŸ–Œ</span>
        <h3>Color Picker</h3>
        <p>Palettes & CSS export</p>
      </a>
      <a href="/tools/jwt-decoder" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">ðŸ”‘</span>
        <h3>JWT Decoder</h3>
        <p>Decode & inspect tokens</p>
      </a>
      <a href="/tools/qr-generator" class="tool-showcase-card">
        <span class="tool-showcase-card__icon">â–£</span>
        <h3>QR Generator</h3>
        <p>URLs, WiFi, email, phone</p>
      </a>
    </div>
  </section>

  <!-- Subscribe -->
  <section style="background: var(--color-surface); padding: 4rem 0;">
    <div class="container">
      <Subscribe />
    </div>
  </section>
</BaseLayout>

<style>
  .section {
    padding: 4rem 0;
  }
  .section--surface {
    background: var(--color-surface);
  }
  .section__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  .section__header h2 {
    font-size: 2rem;
    margin-bottom: 0;
  }
  .section__header a {
    color: var(--color-primary);
    font-weight: 600;
  }

  .tools-showcase {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
  }
  .tool-showcase-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.25rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    text-decoration: none;
    color: inherit;
    transition: all 200ms;
  }
  .tool-showcase-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary);
    text-decoration: none;
    color: inherit;
  }
  .tool-showcase-card * {
    text-decoration: none;
  }
  .tool-showcase-card__icon {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: var(--font-mono);
    background: var(--color-code-bg);
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    margin-bottom: 0.75rem;
  }
  .tool-showcase-card h3 {
    font-size: 0.9rem;
    margin-bottom: 0.2rem;
    color: var(--color-text);
  }
  .tool-showcase-card p {
    font-size: 0.78rem;
    color: var(--color-text-light);
    margin: 0;
  }
  .post-card--wide {
    grid-column: 1 / -1;
  }

  @media (max-width: 768px) {
    .tools-showcase {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 480px) {
    .tools-showcase {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
    }
    .tool-showcase-card {
      padding: 1rem 0.75rem;
    }
  }
</style>
